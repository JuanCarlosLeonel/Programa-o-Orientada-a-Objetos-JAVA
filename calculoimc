package calculoimc;

import javax.swing.JOptionPane;

/**
 *
 * @author Juanleonel
 */
public class CalculoIMC {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        
        float peso ,altura ,imc ;
        int resultado ;
        
        do  {
            peso = Float.parseFloat(JOptionPane.showInputDialog("Qual é o seu peso?")); //peso em quilos
            altura = Float.parseFloat(JOptionPane.showInputDialog("Qual é a sua altura?")); // altura em metros
            resultado = JOptionPane.showConfirmDialog(null, "Peso:" + peso +"quilos  " + "Altura:" + altura + "m" );
        }
        while(resultado !=JOptionPane.OK_OPTION);
        
        imc = peso/(altura*altura);
        
        if 
        (imc<=17){
        JOptionPane.showMessageDialog(null,"Seu IMC é:  "+ imc  + " Abaixo do peso, muito magro!");
        }
        else if 
        (imc >17 && imc<=18.49){
        JOptionPane.showMessageDialog(null,"Seu IMC é: " + imc  + " Abaixo do peso");
        }
        else if 
        (imc>18.50 && imc<=24.99){
        JOptionPane.showMessageDialog(null,"Seu IMC é: " + imc  + " Peso normal!");
        }
        else if 
        (imc>25 && imc<=29.99){
        JOptionPane.showMessageDialog(null,"Seu IMC é: " + imc + " Sobrepeso, um regiminho ajeita tudo");
        }
        else if 
        (imc>30 && imc<=34.99){
        JOptionPane.showMessageDialog(null,"Seu IMC é: " + imc + " Você está com obesidade I");
        }
        else if 
        (imc>35 && imc<=39.99){
        JOptionPane.showMessageDialog(null,"Seu IMC é: " + imc + " Você está com obesidade II,(severa),procure ajuda!");
        }
        else if
        (imc>40){
        JOptionPane.showMessageDialog(null,"Seu IMC é: " + imc + " Você está com obesidade III,procure um médico, sua saúde vai mal!");
        }
        
    }
 
    
}
